@model BurgerShop.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].Vegetarian)
